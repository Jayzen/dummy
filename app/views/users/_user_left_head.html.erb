<div class="card-body d-flex flex-row justify-content-around">
  <div class="d-flex flex-column">
    <div>
      <% if @user.avatar.to_s.size == 0 %>
        <% if @user.gender == "male" %>
          <%= image_tag "male.jpeg", size: "64x64", class: "rounded-circle" %>
        <% else %>
          <%= image_tag "female.jpg", size: "64x64", class: "rounded-circle" %>
        <% end -%>
      <% else %>
        <%= image_tag @user.avatar.large.url, size: "64x64", class: "rounded-circle" %>
      <% end -%>
    </div>
    <div>
      <% if @user.admin? && @user.superadmin? %>
        <span class='badge badge-primary'>超级管理员</span>
      <% elsif @user.admin? && !@user.superadmin? %>
        <span class='badge badge-primary'>管理员</span>
      <% else %>
        <span class='badge badge-primary'>普通用户</span>
      <% end -%>
    </div>
  </div>
  <div class="d-flex flex-column text-center">
    <div class="text-secondary">
      <span><strong><%= @user.name %></strong></span>
    </div>
    <div class="text-secondary">
      <span><small>注册时间: <%= @user.created_at.strftime("%F") %></small></span>
    </div>
    <div class="text-secondary">
      <span><%= @user.articles_count %>篇帖子</span> •
      <span><%= @user.comments_count %>条回帖</span>
    </div>
  </div>
</div>
