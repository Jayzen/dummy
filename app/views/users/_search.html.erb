<div class="input-group mb-3 col-md-6 mx-auto">
  <%= form_tag(search_users_path, method: :get) do %>
    <div class="input-group-prepend">
      <%= select_tag "category", raw("<option value='email'>邮箱</option><option value='name' selected>用户名</option>"), class: "custom-select text-secondary"%>
    </div>
    <%= text_field_tag :search, nil, placeholder: "输入用户名或邮箱..", class: "form-control" %>
  <% end %>
</div>
