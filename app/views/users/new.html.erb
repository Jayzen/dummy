<%= render 'shared/errors' %>
<%= form_for(@user, url: users_path, method: 'post') do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label text-secondary">用户名</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label text-secondary">性别</label>
    <div class="col-sm-10">
      <div class="form-check">
        <%= f.radio_button :gender, "male", class: "form-check-input", checked: "checked" %>
        <label class="form-check-label text-secondary">
          美男子
        </label>
      </div>
      <div class="form-check">
        <%= f.radio_button :gender, "female", class: "form-check-input" %>
        <label class="form-check-label text-secondary">
          美少女
        </label>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label text-secondary">邮箱</label>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label text-secondary">密码</label>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label text-secondary">密码确认</label>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <%= f.submit "用户注册", class: "btn btn-primary"%>
    </div> 
  </div>
<% end %>
