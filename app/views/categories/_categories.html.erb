<div class="col-md-10">
  <div class="card">
    <div class="card-header text-secondary text-center">
      标签列表
    </div>
    <div class="card-body">
      <table class="table table-sm table-hover table-striped">
        <thead>
          <tr class="text-secondary">
            <th class="text-left">标签名称</th>
            <th class="text-center">标签权重</th>
            <th class="text-right"><%= link_to "新建标签", new_category_path, class: "btn btn-primary btn-sm" %></th>
          </tr>
        </thead>
        <tbody>
         <% @categories.each do |category| %>
           <tr class="text-secondary">
             <td class="text-left"><%= category.name %></td>
             <td class="text-center"><%= category.weight %></td>
             <td class="text-right">
               <%= link_to "编辑", edit_category_path(category), class: "btn btn-secondary btn-sm" %> 
               <%= link_to "删除", category_path(category), method: :delete, 'data-confirm': "确认删除吗?", class: "btn btn-secondary btn-sm" %>
               <% if category.root? %>
                 <a href="<%= categories_path(id: category) %>", class="btn btn-secondary btn-sm">
                   查看子分类 <span class="badge badge-light"><%= category.subordinates.size %></span>
                 </a>
               <% end -%>
             </td>
           </tr>
         <% end -%>
        </tbody>
      </table>
      <%= paginate @categories %>
    </div>
  </div>
</div>
