<div class="card text-center">
  <div class="card-header">
    <a href="#top" class="back-to-top text-secondary">返回页首</a>
  </div>
  <div class="card-body d-flex flex-column align-items-center">
    <div class="mb-0" id="like">
      <% if logged_in? %>
        <% if current_user.like_topics.include?(@article)%>
          <%= render 'unlike' %>
        <% else %>
          <%= render 'like' %>
        <% end %>
      <% else %>
        <%= render 'like' %>
      <% end -%>
    </div>
    <div class="mt-0 mb-4 text-secondary" id="likes_count">
      <%= render 'likes_count'%>
    </div>
    <div class="d-flex flex-row justify-content-center">
      <div id="follow">
        <% if logged_in? %>
          <% if current_user.follow_topics.include?(@article)%>
            <%= render 'unfollow' %>
          <% else %>
            <%= render 'follow' %>
          <% end -%>
        <% else %>
          <%= render 'follow' %>
        <% end -%>
      </div>
      <div id="keep">
        <% if logged_in? %>
          <% if current_user.keep_topics.pluck(:id).include?(@article.id)%>
            <%= render 'unkeep' %>
          <% else %>
            <%= render 'keep' %>
          <% end %>
        <% else %>
          <%= render 'keep' %>
        <% end %>
      </div>
    </div>
  </div>
  <hr class="mb-0 mt-0">
  <div class="card-body">
    <%= social_share_button_tag(@article.title) %>
  </div>
  <hr class="mb-0 mt-0">
  <div class="card-body text-secondary">
    <small>共收到<strong><%= "#{@article.comments_count}"%></strong>条回复</small>
  </div>
  <div class="card-footer">
    <a href="#bottom" class="back-to-top text-secondary">返回页尾</a>
  </div>
</div>
