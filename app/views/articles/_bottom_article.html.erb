<div class="card-footer d-flex flex-row justify-content-between">
  <div class="d-flex flex-row">
    <div id="bottom-like">
      <% if logged_in? %>
        <% if current_user.like_topics.exists?(@article.id)%>
          <%= render 'unlike_bottom' %>
        <% else %>
         <%= render 'like_bottom' %>
        <% end -%>
      <% else %>
        <%= render 'like_bottom' %>
      <% end -%>
    </div>
    <div id="bottom-follow">
      <% if logged_in? %>
        <% if current_user.follow_topics.exists?(@article.id)%>
          <%= render 'unfollow' %>
        <% else %>
          <%= render 'follow' %>
        <% end -%>
      <% else %>
        <%= render 'follow' %>
      <% end -%>
    </div>
    <div id="bottom-keep">
      <% if logged_in? %>
        <% if current_user.keep_topics.exists?(@article.id)%>
          <%= render 'unkeep' %>
        <% else %>
          <%= render 'keep' %>
        <% end %>
      <% else %>
        <%= render 'keep' %>
      <% end -%>
    </div>
  </div>
  <div class="d-flex flex-row-reverse">
    <% if @article.user == current_user %>
      <div>
        <button class="btn btn-light btn-sm text-secondary" data-toggle="tooltip" data-placement="top" title="编辑文章" >
          <a href="<%= edit_article_path(@article) %>", class="text-secondary">
            <i class="fa fa-pencil fa-fw text-secondary"></i>
          </a>
        </button>
      </div>
      <div id="close_comments">
        <% if @article.set_comments? %>
          <button class="btn btn-light btn-sm text-secondary" data-toggle="tooltip" data-placement="top" title="关闭评论">
            <a href="<%= comments_set_article_path(@article, set_comments: @article.set_comments) %>", class="text-secondary">
              <i class="fa fa-close fa-fw text-secondary"></i>
            </a>
          </button> 
        <% else %>
          <button class="btn btn-light btn-sm text-secondary" data-toggle="tooltip" data-placement="top" title="开放评论">
            <a href="<%= comments_set_article_path(@article, set_comments: @article.set_comments) %>", class="text-secondary">
              <i class="fa fa-refresh fa-fw text-secondary"></i>
            </a>
          </button>
        <% end %>
      </div>
    <% end -%>
  </div> 
</div>
